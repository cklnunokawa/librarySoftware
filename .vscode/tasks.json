{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++20",  
          "-g",
          "${workspaceFolder}/backend/src/main.cpp",
          "-I${workspaceFolder}/backend/include",
          "-o",
          "${workspaceFolder}/bin/libraryApp"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  